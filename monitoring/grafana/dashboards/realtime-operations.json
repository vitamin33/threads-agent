        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto",
              "inspect": false,
              "filterable": true
            },
            "overrides": [
              {
                "matcher": {
                  "id": "byName",
                  "options": "Health Status"
                },
                "properties": [
                  {
                    "id": "custom.displayMode",
                    "value": "color-background"
                  },
                  {
                    "id": "color",
                    "value": {
                      "mode": "thresholds"
                    }
                  },
                  {
                    "id": "thresholds",
                    "value": {
                      "steps": [
                        {
                          "color": "red",
                          "value": null
                        },
                        {
                          "color": "yellow",
                          "value": 0.8
                        },
                        {
                          "color": "green",
                          "value": 0.95
                        }
                      ]
                    }
                  }
