        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Service"
            }
          ]
        },
        "transformations": [
          {
            "id": "labelsToFields",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "instance": true,
                "job": true
              },
              "indexByName": {},
              "renameByName": {
                "service": "Service",
                "health_score": "Health Status",
                "response_time_ms": "Response Time",
                "error_rate": "Error Rate",
                "Value": "Current Value"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
