{
  "dashboard": {
    "id": null,
    "uid": "infra-health",
    "title": "Threads Agent - Infrastructure Health",
    "tags": ["infrastructure", "database", "queue"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "id": 1,
        "title": "PostgreSQL Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"threads_agent\"}",
            "refId": "A",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_settings_max_connections",
            "refId": "B",
            "legendFormat": "Max Connections"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "id": 2,
        "title": "RabbitMQ Queue Depth",
        "type": "graph",
        "targets": [
          {
            "expr": "rabbitmq_queue_messages",
            "refId": "A",
            "legendFormat": "{{queue}}"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Messages"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "id": 3,
        "title": "Database Query Time (p95)",
        "type": "gauge",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pg_stat_statements_total_time_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 1,
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "id": 4,
        "title": "RabbitMQ Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rabbitmq_channel_messages_published_total[5m])",
            "refId": "A",
            "legendFormat": "Publish Rate"
          },
          {
            "expr": "rate(rabbitmq_channel_messages_delivered_total[5m])",
            "refId": "B",
            "legendFormat": "Delivery Rate"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Messages/sec"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "id": 5,
        "title": "Database Size Growth",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"threads_agent\"}",
            "refId": "A",
            "legendFormat": "Database Size"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Size"
          }
        ]
      },
      {
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16},
        "id": 6,
        "title": "Slowest Queries",
        "type": "table",
        "targets": [
          {
            "expr": "topk(5, pg_stat_statements_mean_exec_time_seconds)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 16},
        "id": 7,
        "title": "Queue Consumer Lag",
        "type": "stat",
        "targets": [
          {
            "expr": "rabbitmq_queue_messages_unacknowledged",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 16},
        "id": 8,
        "title": "Infrastructure Health Score",
        "type": "stat",
        "targets": [
          {
            "expr": "(up{job=\"postgres_exporter\"} + up{job=\"rabbitmq\"} + up{job=\"orchestrator\"}) / 3",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.66},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      }
    ]
  }
}