{
  "dashboard": {
    "id": null,
    "title": "Cost Optimization - FinOps Dashboard",
    "tags": ["cost", "finops", "optimization", "efficiency"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5m",
    "schemaVersion": 39,
    "version": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "cost_category",
          "type": "query",
          "query": "label_values(finops_cost_breakdown, category)",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "options": [],
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "includeAll": true,
          "multi": true,
          "allValue": ".*"
        },
        {
          "name": "optimization_priority",
          "type": "custom",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "options": [
            {
              "selected": true,
              "text": "All",
              "value": "$__all"
            },
            {
              "selected": false,
              "text": "High",
              "value": "high"
            },
            {
              "selected": false,
              "text": "Medium",
              "value": "medium"
            },
            {
              "selected": false,
              "text": "Low",
              "value": "low"
            }
          ],
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Cost Breakdown by Category",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (category) (finops_cost_breakdown{category=~\"$cost_category\"})",
            "refId": "A",
            "legendFormat": "{{category}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "displayMode": "table",
              "showLegend": true,
              "showTooltip": true,
              "showTooltipPercent": true
            },
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "displayLabels": ["name", "percent", "value"],
          "legend": {
            "displayMode": "visible",
            "placement": "right",
            "calcs": ["lastNotNull", "percent"]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Budget Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "finops_budget_utilization_percentage",
            "refId": "A",
            "legendFormat": "Budget Used",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 120,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 100
                },
                {
                  "color": "dark-red",
                  "value": 110
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Cost Trends Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (category) (rate(finops_cost_breakdown[1h])) * 3600",
            "refId": "A",
            "legendFormat": "{{category}}/hour",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          },
          {
            "expr": "finops_cost_budget_hourly",
            "refId": "B",
            "legendFormat": "Budget/hour",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "min": 0,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {
                "mode": "normal",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "Cost/Hour",
              "axisColorMode": "text",
              "scaleDistribution": {
                "type": "linear"
              },
              "axisCenteredZero": false,
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "line"
              }
            },
            "color": {
              "mode": "palette-classic"
            },
            "overrides": [
              {
                "matcher": {
                  "id": "byName",
                  "options": "Budget/hour"
                },
                "properties": [
                  {
                    "id": "color",
                    "value": {
                      "mode": "fixed",
                      "fixedColor": "red"
                    }
                  },
                  {
                    "id": "custom.lineStyle",
                    "value": {
                      "dash": [10, 10],
                      "fill": "dash"
                    }
                  },
                  {
                    "id": "custom.stacking",
                    "value": {
                      "mode": "none"
                    }
                  }
                ]
              }
            ]
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "visible",
            "placement": "bottom",
            "calcs": ["lastNotNull", "max", "mean"]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Cost per Engagement Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "finops_cost_per_engagement",
            "refId": "A",
            "legendFormat": "Cost/Engagement",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          },
          {
            "expr": "finops_cost_per_follow",
            "refId": "B",
            "legendFormat": "Cost/Follow",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          },
          {
            "expr": "finops_cost_per_conversion",
            "refId": "C",
            "legendFormat": "Cost/Conversion",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "min": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.01
                },
                {
                  "color": "red",
                  "value": 0.05
                }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Potential Savings Opportunities",
        "type": "stat",
        "targets": [
          {
            "expr": "finops_potential_savings_monthly",
            "refId": "A",
            "legendFormat": "Monthly Savings",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          },
          {
            "expr": "finops_optimization_impact_percentage",
            "refId": "B",
            "legendFormat": "Optimization Impact",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "green",
                  "value": 100
                }
              ]
            },
            "overrides": [
              {
                "matcher": {
                  "id": "byName",
                  "options": "Monthly Savings"
                },
                "properties": [
                  {
                    "id": "unit",
                    "value": "currencyUSD"
                  }
                ]
              },
              {
                "matcher": {
                  "id": "byName",
                  "options": "Optimization Impact"
                },
                "properties": [
                  {
                    "id": "unit",
                    "value": "percent"
                  }
                ]
              }
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Optimization Recommendations",
        "type": "table",
        "targets": [
          {
            "expr": "finops_optimization_recommendations{priority=~\"$optimization_priority\"}",
            "refId": "A",
            "legendFormat": "{{recommendation_type}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto",
              "inspect": false,
              "filterable": true
            },
            "overrides": [
              {
                "matcher": {
                  "id": "byName",
                  "options": "Priority"
                },
                "properties": [
                  {
                    "id": "custom.displayMode",
                    "value": "color-background"
                  },
                  {
                    "id": "color",
                    "value": {
                      "mode": "thresholds"
                    }
                  },
                  {
                    "id": "thresholds",
                    "value": {
                      "steps": [
                        {
                          "color": "green",
                          "value": null
                        },
                        {
                          "color": "yellow",
                          "value": 1
                        },
                        {
                          "color": "red",
                          "value": 2
                        }
                      ]
                    }
                  }
                ]
              },
              {
                "matcher": {
                  "id": "byName",
                  "options": "Potential Savings"
                },
                "properties": [
                  {
                    "id": "unit",
                    "value": "currencyUSD"
                  },
                  {
                    "id": "custom.displayMode",
                    "value": "color-background"
                  }
                ]
              }
            ]
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Potential Savings"
            }
          ]
        },
        "transformations": [
          {
            "id": "labelsToFields",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "instance": true,
                "job": true
              },
              "indexByName": {},
              "renameByName": {
                "recommendation_type": "Recommendation Type",
                "priority": "Priority",
                "potential_savings": "Potential Savings",
                "implementation_effort": "Implementation Effort",
                "description": "Description",
                "Value": "Impact Score"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Model Usage Cost Analysis",
        "type": "barchart",
        "targets": [
          {
            "expr": "sum by (model) (finops_model_usage_cost)",
            "refId": "A",
            "legendFormat": "{{model}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "min": 0,
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "basic",
              "orientation": "horizontal"
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "basic",
          "showValue": "auto",
          "barWidth": 0.97,
          "groupWidth": 0.7
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 8,
        "title": "Efficiency Improvement Trends",
        "type": "timeseries",
        "targets": [
          {
            "expr": "finops_efficiency_improvement_rate",
            "refId": "A",
            "legendFormat": "Efficiency Improvement",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          },
          {
            "expr": "finops_cost_reduction_rate",
            "refId": "B",
            "legendFormat": "Cost Reduction",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "Improvement Rate (%)",
              "axisColorMode": "text",
              "scaleDistribution": {
                "type": "linear"
              },
              "axisCenteredZero": false,
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "line"
              }
            },
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "transparent",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 5
                }
              ]
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "visible",
            "placement": "bottom",
            "calcs": ["lastNotNull", "mean"]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      },
      {
        "id": 9,
        "title": "Infrastructure Cost Breakdown",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (component) (finops_infrastructure_cost)",
            "refId": "A",
            "legendFormat": "{{component}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "min": 0,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 30,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "normal",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "Infrastructure Cost",
              "axisColorMode": "text",
              "scaleDistribution": {
                "type": "linear"
              },
              "axisCenteredZero": false,
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "visible",
            "placement": "bottom",
            "calcs": ["lastNotNull", "max"]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Budget Alerts",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "finops_budget_utilization_percentage > 90",
          "iconColor": "rgba(255, 0, 0, 1)",
          "name": "Budget Alert",
          "titleFormat": "Budget Alert: {{instance}}",
          "tagKeys": "alert_level"
        },
        {
          "name": "Cost Optimization Opportunities",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "finops_optimization_recommendations > 0",
          "iconColor": "rgba(0, 255, 0, 1)",
          "name": "Optimization",
          "titleFormat": "Optimization Opportunity: {{recommendation_type}}",
          "tagKeys": "priority"
        }
      ]
    },
    "links": [
      {
        "asDropdown": false,
        "icon": "external link",
        "includeVars": true,
        "keepTime": true,
        "tags": [],
        "targetBlank": true,
        "title": "Cost Optimization API",
        "tooltip": "Open Cost Optimization API endpoint",
        "type": "link",
        "url": "http://localhost:8000/cost-optimization"
      }
    ]
  }
}