{
  "dashboard": {
    "id": null,
    "uid": "enhanced-kpis",
    "title": "Threads Agent - Enhanced KPIs",
    "tags": ["business", "operations", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "id": 10,
        "title": "Service Availability",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(up{job=\"orchestrator\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.99},
                {"color": "green", "value": 0.999}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "id": 11,
        "title": "Posts Published (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(posts_published_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "green", "value": 2000}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "id": 12,
        "title": "Viral Posts",
        "type": "stat",
        "targets": [
          {
            "expr": "viral_posts_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "green", "value": 50}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "id": 13,
        "title": "Follower Growth/Hour",
        "type": "stat",
        "targets": [
          {
            "expr": "follower_growth_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 150}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "id": 14,
        "title": "Error Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(error_rate_total[5m])",
            "refId": "A",
            "legendFormat": "{{service}} - {{error_type}}"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Error Rate"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "id": 15,
        "title": "Cost Breakdown by Model",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by(model) (rate(token_usage_total[5m]) * 0.0001)",
            "refId": "A",
            "legendFormat": "{{model}}"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"],
          "legendDisplayMode": "table",
          "legendPlacement": "right"
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "id": 16,
        "title": "Engagement Trend (24h)",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(posts_engagement_rate) by (persona_id)",
            "refId": "A",
            "legendFormat": "{{persona_id}}"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Engagement %",
            "min": 0,
            "max": 10
          }
        ],
        "thresholds": [
          {
            "value": 6,
            "color": "green",
            "fill": true,
            "line": true,
            "op": "gt"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "id": 17,
        "title": "Service Uptime",
        "type": "table",
        "targets": [
          {
            "expr": "service_uptime_seconds",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "instance": true,
                "job": true
              },
              "renameByName": {
                "service": "Service",
                "Value": "Uptime (days)"
              }
            }
          },
          {
            "id": "calculateField",
            "options": {
              "mode": "reduceRow",
              "reduce": {
                "reducer": "last"
              },
              "replaceFields": false,
              "alias": "Uptime (days)",
              "binary": {
                "left": "Value",
                "operator": "/",
                "right": "86400"
              }
            }
          }
        ]
      }
    ]
  }
}