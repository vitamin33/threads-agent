{
  "dashboard": {
    "id": null,
    "uid": "business-kpis",
    "title": "Threads Agent - Business KPIs",
    "tags": ["business", "kpis"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "id": 1,
        "title": "Engagement Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "avg(posts_engagement_rate)",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 10,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 6}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "id": 2,
        "title": "Cost per Follow",
        "type": "gauge",
        "targets": [
          {
            "expr": "avg(cost_per_follow_dollars)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "min": 0,
            "max": 0.02,
            "decimals": 3,
            "thresholds": {
              "mode": "absolute", 
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.008},
                {"color": "red", "value": 0.01}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "id": 3,
        "title": "Monthly Revenue Projection",
        "type": "stat",
        "targets": [
          {
            "expr": "revenue_projection_monthly",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 0
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "id": 4,
        "title": "API Latency (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(request_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95 latency"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "id": 5,
        "title": "Token Usage by Model",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(token_usage_total[5m])",
            "refId": "A",
            "legendFormat": "{{model}}"
          }
        ]
      },
      {
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 16},
        "id": 6,
        "title": "Active Conversations",
        "type": "stat",
        "targets": [
          {
            "expr": "active_conversations",
            "refId": "A"
          }
        ]
      },
      {
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 16},
        "id": 7,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "cache_hit_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      }
    ]
  }
}